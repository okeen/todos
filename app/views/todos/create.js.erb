<% if @todo.errors.any? -%>
  $("#status").html("TODO item creation error");
  $("#error_explanation").html("<%= todo_error_message(@todo)%>");
  $("#error_explanation").show(300);
  $("#notice").show(300);
<% else -%>
  $("#status").html("TODO item added");
  $("#error_explanation").hide(300);
  $("#status").show(300);
  add_new_todo_element(
	{
		todo_id: '<%= @todo.id%>',
		todo_list_id: '<%= @todo.todo_list.id%>',
		title: '<%= @todo.title%>',
		expected_duration: <%= @todo.expected_duration%>,
		due_date: '<%= @todo.due_date%>',
		isFinished: <%= @todo.is_finished%>
	}).highlight();
<% end -%>

